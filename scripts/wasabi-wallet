echo "Generate wallet history"
cd /opt/faucet
python3 <<HEREDOC
from bitcoin import Bitcoin
bitcoin = Bitcoin("http://127.0.0.1:18443", "rpc", "rpc")
bitcoin.send("bcrt1qkvwu9g3k2pdxewfqr7syz89r3gj557l374sg5v", 5) # Trezor all-all
bitcoin.send("bcrt1pswrqtykue8r89t9u4rprjs0gt4qzkdfuursfnvqaa3f2yql07zmq2fdmpx", 5) # Trezor taproot all-all
bitcoin.send("bcrt1q7gefpk0ehc738gc4kmltu20uq7rdxnyk7aupqg", 3) # Wasabi Account 1
bitcoin.send("bcrt1qa4cqygqqzwkwlqzuktcqgzj7he9tfn5f6v335p", 2) # Wasabi Account 2
HEREDOC

echo "Running wasabi wallet"
cd /opt/WalletWasabi/ && dotnet run --project WalletWasabi.Fluent.Desktop/WalletWasabi.Fluent.Desktop.csproj
